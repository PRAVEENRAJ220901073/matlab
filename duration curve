 data=[0 6 20; 6 10 25; 10 12 30;12 16 25; 16 20 35; 20 24 20];
 dtdata=[data(:,2)-data(:,1),data(:,3)];
 Dt=data(:,2)-data(:,1);
 [x11,i11]=sort(dtdata',2,'descend');
 for(i=1:1:(length(Dt')))
 ass(i,:)=[x11(2,i) dtdata((i11(2,i)),1)];
 end
 ass1(1)=0;
 for(i=1:1:(length(Dt')))
 ass1(i+1)=ass1(i)+ass(i,2);
 end
 ass3=[ass(:,1)',0];
 stairs(ass1,ass3)
xlabel('Time')
ylabel('Power')
title('load duration  curve')
